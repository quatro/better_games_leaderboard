=render 'navigation', current_page: current_page, last_page: last_page

.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th.col-sm-1 Pos
        %th.col-sm-3 Name
        %th.col-sm-1 Points
        %th.nowrap 17.1
        %th.nowrap 17.2
        %th.nowrap 17.3
        %th.nowrap 17.4
        %th.nowrap 17.5

    %tbody
      - results['athletes'].each do |athlete|
        %tr
          %td #{athlete['overallrank']}
          %td #{athlete['name']}
          %td #{athlete['overallscore']}
          - athlete['scores'].each do |score|
            - scoredetails = score['scoredetails']
            - if scoredetails && scoredetails['breakdown']
              %td
                %button.poppy.btn.btn-default{type:'button', data:{toggle:"popover", placement:'top', container:'body', content:scoredetails['breakdown']}}
                  #{score['workoutrank']} (#{score['scoredisplay']})
            - else
              %td #{score['scoredisplay']}

=render 'navigation', current_page: current_page, last_page: last_page

:javascript
  $(document).ready(function(){
    $('.poppy').popover();

    $('.first-button').on('click', function(e){
      e.preventDefault();
      $('#filter_page').val('1');
      evaluate_current();
    });

    $('.last-button').on('click', function(e){
      e.preventDefault();
      $('#filter_page').val("#{last_page}");
      evaluate_current();
    });

    $('.prev-button').on('click', function(e){
      e.preventDefault();
      $('#filter_page').val("#{current_page.to_i - 1}");
      evaluate_current();
    });

    $('.next-button').on('click', function(e){
      e.preventDefault();
      $('#filter_page').val("#{current_page.to_i + 1}");
      evaluate_current();
    });


    $('.gotopage').on('change', function(e){
      e.preventDefault();
      $('#filter_page').val($(this).val());
      evaluate_current();
    });


  });